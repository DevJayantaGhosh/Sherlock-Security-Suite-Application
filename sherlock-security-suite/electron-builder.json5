{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",

  "appId": "SherlockSecuritySuitecs23m513",
  "productName": "SherlockSecuritySuite",

  "asar": true,

  "directories": {
    "output": "release/${version}"
  },

  "files": [
    "dist/**",
    "dist-electron/**",
    "!tools/**"
  ],

  /* -------------------------------------------------------
     macOS build
     ------------------------------------------------------- */
  "mac": {
    "target": ["dmg"],
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}",

    "extraResources": [
      {
        "from": "tools/darwin",
        "to": "tools",
        "filter": ["**/*"]
      }
    ]
  },

  /* -------------------------------------------------------
     Windows build
     ------------------------------------------------------- */
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}",

    "extraResources": [
      {
        "from": "tools/win",
        "to": "tools",
        "filter": ["**/*"]
      }
    ]
  },

  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },

  /* -------------------------------------------------------
     Linux build
     ------------------------------------------------------- */
  "linux": {
    "target": ["AppImage"],
    "artifactName": "${productName}-Linux-${version}.${ext}",

    "extraResources": [
      {
        "from": "tools/linux",
        "to": "tools",
        "filter": ["**/*"]
      }
    ]
  }
}
